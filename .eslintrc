{
  "env": {
    "browser": true,
    "node": true
  },
  "parser": "babel-eslint",
  "extends": "airbnb",
  "rules": {
    "arrow-body-style": [1, "as-needed"],
    "new-cap": [0],
    "no-unused-vars": [0],
    "no-param-reassign": [0],
    "consistent-return": [0],
    "no-shadow": [0],
    "func-names": [0],
    "global-require": [0],
    "experimentalDecorators": [0],
    "import/no-extraneous-dependencies": [0],
    "react/jsx-filename-extension": [0],
    "react/self-closing-comp": [0]
  },
  "globals": {
    "__CLIENT__": true,
    "__SERVER__": true,
    "__DEVELOPMENT__": true,
    "__DEVTOOLS__": true,
    "db": true
  }
}
